<div class="container">



    <div class="jumbotron">

        <h1> Eat-Da- Buger!</h1>

        <p>Best Burgers.</p>

        <br>

        <h2>Burger Choices</h2>

        <panel>

            <form class="create-form">

                <div class="form-group">

                    <label for="newburger">Ready in 15 minutes</label>

                    {{!-- <input type="text" id="newburger" name="burger"> --}}

                    <select data-placeholder="" id="newburger" name="burger">

                        <option value="Nothing Selected" selected>Burger menue Options</option>

                        <option value="Hamburger">Hamburger</option>

                        <option value="superCheeseBurger">SuperCheeseBurger</option>

                        <option value="QuarterPounder">Quarter Pounder</option>

                        <option value="VeggieBurger">Veggie Burger</option>

                        <option value="MushroomBurger">Mushroom Burger</option>

                        <option value="AllVegan">All Vegan</option>

                        <option value="BaconKingBurger">Bacon King</option>

                    </select>



                    <button type="submit" class="btn btn-success" id="addburger">

                        <span class="fa fa-thumbs-up"></span>

                    </button>

                </div>

            </form>

        </panel>

    </div>

    <div class="row">

        <div class="col-sm-6">

            <div class="panel panel-default">

                <div class="panel-heading" id="leftside"><strong>Order Your Burger</strong>

                    <p>Send order to cashier when ready for pick up</p>

                </div>

                <div class="panel-body">



                    <ul>

                        {{#each burgers}}

                        {{#unless devoured}}



                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>

                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"

                            data-newDevoured="{{devour}}"><span class="fa fa-usd"></span></button>

                        <hr>

                        {{/unless}}

                        {{/each}}

                    </ul>



                </div>

            </div>

        </div>

        <div class="col-sm-6">

            <div class="panel panel-default">

                <div class="panel-heading" id="rightside"><strong>Devoured</strong>

    

                </div>

                <div class="panel-body">

                    <ul>

                        {{#each burgers}}

                        {{#if devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>

                        <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"

                            data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button>

                        <hr>

                        {{/if}}

                        {{/each}}

                    </ul>







                </div>

            </div>

        </div>



    </div>

    <!--endrow -->

</div>

<!--endcontainer -->